<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="5">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"/>
<LinearLayout
    android:layout_weight="2"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:orientation="vertical"
    android:weightSum="5">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="20dp"
        android:gravity="center|left"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:text="20% OFFER ON VEGETABLE ROLLS"
        android:textSize="35sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="20dp"
        android:layout_weight="1"
        android:text="Vegetable spring rolls marinated chicken in pandan leaf,glass noodile salad with minced chicken,prawn cake and chicken satay served with assorted dips."
        android:textSize="35sp"/>


</LinearLayout>
</LinearLayout>
