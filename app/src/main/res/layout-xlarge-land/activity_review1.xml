<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbg"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/reviewTitle"
        android:background="#35403a3a">

        <ImageView
            android:id="@+id/fdBackicon"
            android:layout_marginLeft="25dp"
            android:src="@drawable/back_icon1"
            android:gravity="center"
            android:layout_width="40dp"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="We Care For Your Feedback"
            android:textColor="#ffffff"
            android:textSize="@dimen/reviewTitleSize" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="7">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="10dp"
                android:weightSum="3">

                <TextView
                    android:layout_marginLeft="25dp"
                    android:gravity="left"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Name"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/textSize" />

                <EditText

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/whitebar"
                    android:hint="Your Name *"
                    android:paddingLeft="30dp"
                    android:textColorHint="#8e8d8d"
                    android:textSize="@dimen/textSize"
                    android:id="@+id/r1name"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="10dp"
                android:weightSum="3">

                <TextView
                    android:layout_marginLeft="25dp"
                    android:gravity="left"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Mobile number"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/textSize" />

                <EditText
                    android:id="@+id/r1mobno"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/whitebar"
                    android:hint="Your Mobile Number *"
                    android:paddingLeft="30dp"
                    android:textColorHint="#8e8d8d"
                    android:textSize="@dimen/textSize"
                    android:inputType="phone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="10dp"
                android:weightSum="3">

                <TextView
                    android:layout_marginLeft="25dp"
                    android:gravity="left"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Email"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/textSize" />

                <EditText
                    android:id="@+id/r1email"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/whitebar"
                    android:hint="Your Email *"
                    android:paddingLeft="30dp"
                    android:textColorHint="#8e8d8d"
                    android:textSize="@dimen/textSize"
                    android:inputType="textEmailAddress" />
            </LinearLayout>

